---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import CaseCard from '../../components/CaseCard.astro';
---

<Layout title='Case Study - Noasketch'>
	<main class='case-studies'>
		<section>
			<div data-type='wide' class='container flow-large'>
				<Navbar />
				<header class='flow'>
					<h1>Case Studies.</h1>
				</header>
				<div class='summary'>
					<p>
						Showcases successful projects completed by Animancy Studios for various clients. Each
						case study provides an overview of the project, including the website's purpose, design,
						and results.
					</p>
				</div>
			</div>
		</section>

		<section>
			<div data-type='wide' class='container flow-large'>
				<header>
					<h2 class='header-w-line'>How we work.</h2>
				</header>
			</div>
		</section>
	</main>
</Layout>
