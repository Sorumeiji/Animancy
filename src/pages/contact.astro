---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title='contact'>
	<main class='contact'>
		<section class='hero'>
			<div data-type='wide' class='container flow-large'>
				<Navbar />
				<header>
					<h1>Contact Us.</h1>
				</header>
				<div>
					<p>
						Ready to Elevate Your Online Presence? Drop us a line and let's discuss how we can take
						your website to the next level.
					</p>
				</div>
			</div>
		</section>

		<section class='reach-out'>
			<div data-type='wide' class='container flow-large'>
				<form
					class='form-content'
					target='_blank'
					action='https://formsubmit.co/animancydesigns@gmail.com'
					method='POST'
				>
					<header>
						<h2 class='header-w-line'>About You.</h2>
					</header>

					<div class='form-group'>
						<div class='input-group'>
							<input type='text' name='name' placeholder='Your Name' required />
						</div>

						<div class='input-group'>
							<input type='email' name='email' placeholder='Email Address' required />
						</div>
					</div>

					<div class='form-group'>
						<div class='input-group'>
							<input type='text' name='website' placeholder='Website / Company Name' required />
						</div>

						<div class='input-group'>
							<input type='url' name='twitter' placeholder='Twitter URL' required />
						</div>
					</div>

					<header>
						<h2 class='header-w-line'>Your Project</h2>
					</header>

					<div class='form-group'>
						<div class='input-group'>
							<input type='text' name='start-month' placeholder='Start Month' required />
						</div>

						<div class='input-group'>
							<input type='text' name='start-year' placeholder='Start Year' required />
						</div>
					</div>

					<div class='form-group'>
						<div class='input-group'>
							<input type='text' name='launch-month' placeholder='Launch Month' required />
						</div>

						<div class='input-group'>
							<input type='text' name='launch-year' placeholder='Launch Year' required />
						</div>
					</div>

					<div class='form-message'>
						<textarea placeholder='Tell me more...' name='message' rows='10' required></textarea>
					</div>

					<input type='hidden' name='_captcha' value='false' />
					<input type='hidden' name='_next' value='https://staging.animancy.com/thanks' />

					<button type='submit'>Submit Project Request</button>
				</form>
			</div>
		</section>
	</main>
</Layout>
